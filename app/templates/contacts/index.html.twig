{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
    <div class="headeris">MY PHONEBOOK</div>
    <div class="container-fluid">
        <a class="mb-3 btn btn-success" href="{{ path('contacts_new') }}">Create new contact</a>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <table class="table table-hover table-striped table-dark">
            <thead>
            <tr>
                <th style="width: 2%" class="text-center">#</th>
                <th style="width: 15%">Name</th>
                <th style="width: 15%">Email</th>
                <th style="width: 15%">Phone</th>
                <th style="width: 35%">Comment</th>
                <th style="width: 13%" class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td class="align-middle text-center">{{ loop.index }}</td>
                    <td class="align-middle">{{ contact.name }}</td>
                    <td class="align-middle">{{ contact.email }}</td>
                    <td class="align-middle">{{ contact.phone }}</td>
                    <td class="align-middle">{{ contact.comment }}</td>
                    <td class="text-center align-top">
                        {# <a class="btn btn-success btn-sm" href="{{ path('contacts_show', {'id': contact.id}) }}">SHOW</a> #}
                        <a class="btn btn-warning btn-sm"
                           href="{{ path('contacts_edit', {'id': contact.id}) }}">EDIT</a>
                        <a class="btn btn-primary btn-sm"
                           href="{{ path('contacts_share', {'id': contact.id}) }}">SHARE</a>
                        {{ include('contacts/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
